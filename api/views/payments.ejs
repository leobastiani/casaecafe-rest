<div class="container">

    <h1>Send a new payment</h1>
    

    <div class="row">
      <form class="col s12" id="payment">

        <div class="row valign-wrapper">
          <div class="input-field col s10">
            <input required placeholder="yyyy-mm-dd hr:min:sec" id="payment_date" name="payment_date" type="text">
            <label for="payment_date">Payment date</label>
          </div>

          <div class="col s2 center">
            <button type="button" id="now" class="btn waves-effect waves-light">Now
              <i class="material-icons left">today</i>
            </button>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <select required id="payment_type" name="payment_type">
              <option value="" disabled selected>Choose your payment type</option>
              
              <option value="cartao de debito">Cartão de débito</option>
              <option value="cartao de credito">Cartão de crédito</option>
              <option value="boleto bancario">Boleto bancario</option>
              <option value="debito online">Débito online</option>
              <option value="cartao internacional">Cartão internacional</option>

            </select>
            <label for="payment_type">Payment type</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <select required id="product" name="product">
              <option value="" disabled selected>Choose your plan</option>
            </select>
            <label>Product</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">attach_money</i>
            <input required id="product_price" name="product_price" type="number" min="0" step="0.01" class="validate">
            <label for="product_price">Product price</label>
          </div>
        </div>


        <div class="row">
          <div class="input-field col s12">
            <div class="prefix">%</div>
            <input required id="discount" name="discount" type="number" min="0" max="50" step="1" class="validate">
            <label for="discount">Discount</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">attach_money</i>
            <input required id="price" name="price" type="number" min="0" step="0.01" class="validate">
            <label for="price">Final price</label>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <input required id="transaction_id" name="transaction_id" type="text" class="validate">
            <label for="transaction_id">Transaction id</label>
          </div>
        </div>


        <div class="row">
            <button class="btn waves-effect waves-light" type="submit">Send
                <i class="material-icons right">send</i>
            </button>
        </div>

        <div class="row red-text text-darken-2" id="alert">
          <div class="col s12">
            <div class="card-panel">
              <h4 id="alert-message">This is a card panel with dark blue text</h4>
            </div>
          </div>
        </div>

      </form>
    </div>
          



</div>